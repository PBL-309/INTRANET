<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Dashboard de Evaluaciones</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(to bottom right, #e3f2fd, #f8f9fa);
      height: 100vh;
      margin: 0;
      overflow: hidden;
    }

    /* Scrollbar personalizado para sidebar */
    .sidebar-scrollbar::-webkit-scrollbar {
      width: 8px;
    }
    .sidebar-scrollbar::-webkit-scrollbar-track {
      background: transparent;
    }
    .sidebar-scrollbar::-webkit-scrollbar-thumb {
      background-color: #3b4c61;
      border-radius: 4px;
    }

    /* Tabla responsiva */
    .table-responsive {
      max-height: 350px;
      overflow-y: auto;
    }

    /* Animaci칩n para highlight */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <div class="w-full h-screen grid grid-cols-3 gap-4 p-4">
    <!-- Sidebar -->
    <div class="bg-[#1e2a38] text-white p-4 rounded-xl shadow-md col-span-1 overflow-auto sidebar-scrollbar flex flex-col">
      <h2 class="text-xl font-semibold mb-4">Evaluaciones</h2>
      <input
        type="text"
        id="buscarNombre"
        placeholder="Buscar por nombre..."
        class="w-full p-2 mb-4 rounded bg-[#2f3b4a] border border-transparent placeholder-gray-400 text-white focus:outline-none focus:border-blue-400"
      />
      <select
        id="ordenPromedio"
        class="w-full p-2 mb-4 rounded bg-[#2f3b4a] border border-transparent text-white focus:outline-none focus:border-blue-400"
      >
        <option value="desc">Promedio: Mayor a menor</option>
        <option value="asc">Promedio: Menor a mayor</option>
      </select>
      <ul id="listaEvaluaciones" class="flex-grow overflow-y-auto">
        {% for evaluacion in evaluaciones %}
          <li
            class="py-2 border-b border-gray-700 cursor-pointer hover:bg-[#3b4c61] px-2 rounded"
          >{{ evaluacion.nombre }}</li>
        {% endfor %}
      </ul>
    </div>

    <!-- Contenido principal -->
    <div class="bg-white p-4 rounded-xl shadow-md col-span-2 grid grid-rows-[1fr_auto] gap-4">
      <!-- Gr치fica -->
      <div class="bg-gray-50 p-4 rounded-xl shadow-inner">
        <canvas id="graficaEvaluaciones"></canvas>
      </div>

      <!-- Tabla y pregunta -->
      <div class="grid grid-cols-2 gap-4">
        <!-- Tabla con scroll -->
        <div class="table-responsive border rounded shadow-sm">
          <table class="table-auto w-full text-sm text-left border-collapse border border-gray-300">
            <thead>
              <tr class="bg-gray-200">
                <th class="px-2 py-1 border border-gray-300">Pregunta</th>
                <th class="px-2 py-1 border border-gray-300">Respuesta</th>
              </tr>
            </thead>
            <tbody class="respuestas">
              {% for i in range(1, 45) %}
              <tr class="hover:bg-blue-50 cursor-pointer transition">
                <td class="px-2 py-1 border border-gray-300">q{{ i }}</td>
                {{ respuesta_texto[((i % 5) + 1) | string] }}

              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>

        <!-- Cuadro pregunta seleccionada -->
        <div
          id="preguntaSeleccionada"
          class="p-4 bg-gray-50 rounded-xl shadow-inner text-sm text-gray-700 min-h-[200px] flex items-center justify-center italic"
        >
          Haz clic en una celda para ver la pregunta correspondiente.
        </div>
      </div>
    </div>
  </div>

  <script>
    const preguntas = {{ preguntas | tojson }};

    document.addEventListener("DOMContentLoaded", function () {
      const celdas = document.querySelectorAll(".respuestas td:first-child");
      const preguntaBox = document.getElementById("preguntaSeleccionada");

      celdas.forEach((td) => {
        td.classList.add("cursor-pointer", "hover:bg-blue-100", "transition");
        td.addEventListener("click", function () {
          const qText = td.innerText.toLowerCase();
          const num = parseInt(qText.replace("q", ""));

          if (preguntas[num - 1]) {
            preguntaBox.innerHTML = `
              <div class="p-4 bg-white rounded-xl shadow-md text-gray-800 animate-fadeIn">
                <strong>Q${num}:</strong> ${preguntas[num - 1]}
              </div>
            `;
            // Remover marcas previas
            celdas.forEach((c) => c.classList.remove("bg-yellow-200", "font-bold"));
            td.classList.add("bg-yellow-200", "font-bold");
          }
        });
      });

      // Gr치fico Chart.js
      const ctx = document.getElementById('graficaEvaluaciones').getContext('2d');
      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ['Desempe침o', 'Jefe', 'Convivencia', 'Pertenencia'],
          datasets: [{
            label: 'Promedio',
            data: [4.2, 3.8, 4.0, 4.1],
            backgroundColor: [
              'rgba(54, 162, 235, 0.6)',
              'rgba(255, 206, 86, 0.6)',
              'rgba(75, 192, 192, 0.6)',
              'rgba(153, 102, 255, 0.6)'
            ]
          }]
        },
        options: {
          responsive: true,
          plugins: {
            legend: { display: false },
            tooltip: { enabled: true }
          },
          scales: {
            y: { beginAtZero: true, max: 5 }
          }
        }
      });
    });
  </script>
</body>
</html>
